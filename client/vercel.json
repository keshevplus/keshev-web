{
  "version": 2,
  "buildCommand": "pnpm install --no-frozen-lockfile && pnpm run build && mkdir -p dist",
  "outputDirectory": "dist",
  "redirects": [
    {
      "source": "/api/:match*",
      "destination": "https://api.keshevplus.co.il/api/:match*",
      "permanent": true
    }
  ],
  "rewrites": [
    { "source": "/api/contact", "destination": "/api/contact.js" },
    { "source": "/api/leads", "destination": "/api/leads.js" },
    { "source": "/assets/:path*", "destination": "/assets/:path*" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "headers": [
    {
      "source": "/assets/images/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
