{
  "version": 2,
  "framework": "vite",
  "buildCommand": "cd client && pnpm install --frozen-lockfile && pnpm build",
  "outputDirectory": "client/dist",
  "installCommand": "pnpm install --frozen-lockfile",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
