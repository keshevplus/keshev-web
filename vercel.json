{
  "framework": "vite",
  "buildCommand": "cd client && npx pnpm install --no-frozen-lockfile && npx pnpm build",
  "outputDirectory": "client/dist",
  "installCommand": "npm install -g pnpm",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
