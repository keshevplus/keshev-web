{
  "version": 2,
  "buildCommand": "cd client && pnpm install --no-frozen-lockfile && pnpm build",
  "outputDirectory": "client/dist",
  "installCommand": "npm install -g pnpm && pnpm -v",
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "/server/server.js" 
    },
    { 
      "src": "/(.*\\.(js|css|svg|png|jpg|jpeg|gif|ico|json|woff|woff2|ttf|eot))", 
      "dest": "/client/dist/$1" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/client/dist/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "true"
  }
}
