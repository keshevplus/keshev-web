{
  "name": "keshev-web",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "start": "npx concurrently --kill-others --names CLIENT,SERVER \"pnpm --filter ./client start\" \"pnpm --filter ./server start\"",
    "start:client": "pnpm --filter ./client start",
    "start:server": "pnpm --filter ./server start",
    "build": "pnpm --recursive run build",
    "build:client": "pnpm --filter ./client build",
    "build:server": "pnpm --filter ./server build",
    "test": "pnpm --recursive run test",
    "test:client": "pnpm --filter ./client test",
    "test:server": "pnpm --filter ./server test",
    "lint": "pnpm --recursive run lint",
    "lint:client": "pnpm --filter ./client lint",
    "lint:server": "pnpm --filter ./server lint",
    "restart": "scripts\\restart.bat",
    "commit": "git commit -am \"insert update message\"; git push origin main; pnpm run start"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keshevplus/keshev-web.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/keshevplus/keshev-web/issues"
  },
  "homepage": "https://github.com/keshevplus/keshev-web",
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  }
}
